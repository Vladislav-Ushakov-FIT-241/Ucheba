using System;
namespace savage
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Введите строки");

            while (true)
            {
                string line = Console.ReadLine();
                if (line == "")
                {
                    break;
                }
                int count = 1;
                int max = 0;
                if (line.Length == 1)
                {
                    if (line=="a" || line == "b" || line == "c")
                    {
                        Console.WriteLine("1");
                    }
                }
                else
                {
                    for (int i = 1; i < line.Length; i++)
                    {
                        if (((line[i] == 'b') && (line[i - 1] == 'a')) || ((line[i] == 'c') && (line[i - 1] == 'b')) || ((line[i] == 'a') && (line[i - 1] == 'c')))
                        {
                            count++;

                            if (count > max)
                            {
                                max = count;
                            }
                        }
                        else
                        {
                            count = 1;
                        }
                    }
                    Console.WriteLine(max);
                }
            }

        }
    }
}
